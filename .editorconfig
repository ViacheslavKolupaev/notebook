root = true

[*]
charset = utf-8
max_line_length = 120
ij_visual_guides = 90,120
ij_wrap_on_typing = true

[*.{py,md,yml,yaml,json}]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.{py,json}]
indent_size = 4
tab_width = 4

[{*.yaml,*.yml}]
indent_size = 2
tab_width = 2

[{*.bash,*.sh}]
indent_size = 2
tab_width = 2
